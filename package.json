{
  "name": "cardify",
  "version": "1.0.0",
  "description": "Sistema de geração de cards de afiliados Amazon",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "start": "node server/index.js",
    "vercel-build": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "aws4": "^1.12.0",
    "node-fetch": "^3.3.2",
    "node-cache": "^5.1.2",
    "bottleneck": "^2.19.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}
